<Application x:Class="WpfApp1.Application.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Exit="App_OnExit"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Common;component/Resources/Converters.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Common;component/Resources/MenuDictionary.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Common;component/Resources/Templates.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>
</Application>