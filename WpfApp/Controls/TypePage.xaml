<Page x:Class="WpfApp.Controls.TypePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:wpfApp="clr-namespace:WpfApp"
      xmlns:controls="clr-namespace:WpfApp.Controls"
      mc:Ignorable="d"
      Background="AliceBlue"
      d:DesignHeight="200" d:DesignWidth="300"
      Title="TypePage">

    <DockPanel LastChildFill="True">
        <controls:TypeControl Detailed="true">
            <wpfApp:Props.RenderedType>
                <x:Type TypeName="Window" />
            </wpfApp:Props.RenderedType>
        </controls:TypeControl>
    </DockPanel>
</Page>